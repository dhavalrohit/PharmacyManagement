<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        android:layout_height="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/line1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Bill ID"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:layout_width="100dp"
                    android:textAlignment="textEnd"
                    android:id="@+id/billIdText"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold">

                </TextView>


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView

                    android:hint="Search Item.."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/act"
                    android:layout_marginLeft="2dp"
                    android:paddingLeft="5dp"
                    android:maxLines="1"

                    android:inputType="text"
                    android:layout_weight="9" />

                <Button
                    android:text="ADD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnadd"
                    android:layout_margin="2dp"
                    android:layout_weight="1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_above="@+id/line1"
                android:id="@+id/line2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:layout_height="wrap_content">



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/dateLayout_trans_activity"

                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <EditText
                        android:id="@+id/dateText_transaction"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Date" />

                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ptLayout"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp">

                        <EditText
                            android:id="@+id/ptText"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Patient's Name (Optional)" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ageLayout"
                        android:layout_width="100dp"
                        android:layout_height="45dp">

                        <EditText
                            android:id="@+id/ageText"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Age"
                            android:inputType="numberSigned"/>

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/docLayout"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="4dp"
                    android:layout_height="45dp">

                    <EditText
                        android:id="@+id/docText"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Doctor's Name (Optional)" />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">



                <ListView

                    android:id="@+id/list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:scrollbars="vertical">

                </ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/cust"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="10">

                        <AutoCompleteTextView

                            android:id="@+id/actcust"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="6"
                            android:hint="Search Customer.."
                            android:paddingLeft="4dp" />

                        <EditText
                            android:id="@+id/amtdue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"

                            android:hint="Amount Paid"
                            android:inputType="numberDecimal" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textSize="20sp">

                </TextView>
                <TextView
                    android:layout_width="100dp"
                    android:textAlignment="textEnd"
                    android:id="@+id/totalamounttext_transaction"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="0.0">

                </TextView>


            </LinearLayout>



        </LinearLayout>



    </ScrollView>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Bill"
        android:textSize="20dp"
        android:id="@+id/genbtn"
        android:textColor="@android:color/background_light"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:typeface="sans"
        android:textStyle="normal|italic"/>

</RelativeLayout>