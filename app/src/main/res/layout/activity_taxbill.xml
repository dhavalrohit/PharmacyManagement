<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/backbtn"
            android:text="Back"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/printbtn"
            android:text="Print"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/generatepdfbtn"
            android:text="Generate Pdf"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/previouspagebtn"
            android:text="Previous Page"/>



        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/nextpagebtn"
            android:text="Next Page"/>


    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:scrollbars="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:background="@color/md_white_1000"
            android:id="@+id/layouttopdfmain">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/firstheader"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/topbottomleftrightborder"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="shopname"
                        android:background="@drawable/borderbottom"
                        android:id="@+id/shopnametaxbill">

                    </TextView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="shopaddress"
                        android:background="@drawable/borderbottom"
                        android:id="@+id/shopaddtaxbill">

                    </TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="mobileno"
                        android:id="@+id/mobnotaxbill">
                    </TextView>
                </LinearLayout>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="INVOICE"
                    android:id="@+id/billtypetaxbill"
                    android:background="@drawable/topbottomright">

                </TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="gstno"
                    android:id="@+id/gstnotaxbill"
                    android:background="@drawable/topbottomright">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/secondheader"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/leftrightbottomborder"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="patientname"
                            android:background="@drawable/borderbottom"
                            android:id="@+id/ptnametaxbill" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="doctorname"
                            android:id="@+id/docnametaxbill" />

                    </LinearLayout>



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/areataxbill"
                        android:layout_weight="1"
                        android:text="area"
                        android:background="@drawable/rightbottomborder"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="billNo"
                                android:id="@+id/billnoidtaxbill"
                                android:background="@drawable/borderbottom"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="detail"
                                android:id="@+id/billdetailtaxbill"
                                android:background="@drawable/borderbottom"/>

                        </LinearLayout>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="datetime"
                            android:id="@+id/datetimetaxbill"
                            android:background="@drawable/leftrightbottomborder"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:id="@+id/billdatalayout"
                android:background="@drawable/leftrightbottomborder"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/borderbottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Sr"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:background="@drawable/leftborder"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Description"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:background="@drawable/leftborder"/>




                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="HSN"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:background="@drawable/leftborder"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="BatchNo"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:background="@drawable/leftborder"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Exp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:background="@drawable/leftborder"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Unit"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:background="@drawable/leftborder"/>



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="MRP"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:background="@drawable/leftborder"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Qty"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/qtycolum"
                        android:background="@drawable/leftborder" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Rate/Unit"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:background="@drawable/leftborder" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Disc%"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:background="@drawable/leftborder" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Taxable Value"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:background="@drawable/leftborder" />



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="SGST"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:background="@drawable/leftrightbottomborder"
                            android:layout_weight="1">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="rate"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:background="@drawable/leftrightborder">
                            </TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="value"
                                android:layout_weight="1"
                                android:textAlignment="center"

                                android:background="@drawable/rightborder">

                            </TextView>
                        </LinearLayout>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/rightborder"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="CGST"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:background="@drawable/borderbottom">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="rate"
                                android:layout_weight="0.5"
                                android:textAlignment="center">

                            </TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="value"
                                android:layout_weight="0.5"
                                android:textAlignment="center"
                                android:background="@drawable/leftborder">

                            </TextView>


                        </LinearLayout>

                    </LinearLayout>



                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Amount"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                </LinearLayout>
                <ListView
                    android:id="@+id/list_billtaxbill"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:layout_height="0dp"
                    android:layout_weight="3.5"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/rightborder"
                    android:scrollbars="none">

                </ListView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/billfooter"
                android:background="@drawable/leftrightbottomborder"
                android:orientation="vertical"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/borderbottom"
                    android:orientation="horizontal">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:textAlignment="textStart"
                                android:layout_weight="7.5"
                                android:paddingBottom="5dp"
                                android:text="BRING BILL ON RETURN OF MEDICINE WITHIN ONE MONTH"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:background="@drawable/leftbottomborder"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:paddingBottom="5dp"
                                android:text="TOTAL:"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/leftborder"
                                android:text="FOOD LIC No:"/>
                            <TextView
                                android:layout_width="0dp"
                                android:id="@+id/foodlicnotext"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:text="foodlic no text"/>

                        </LinearLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:id="@+id/finalamountintext"
                            android:background="@drawable/leftborder"
                            android:text="finalamountintext"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="20dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/borderbottom"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="tqty"
                                android:id="@+id/totalqty"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:background="@drawable/leftrightborder"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:background="@drawable/rightborder"
                                android:text="     " />
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="discvalue"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:background="@drawable/rightborder"
                                android:id="@+id/discvalue"
                                android:layout_weight="1"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="taxablevaluet"
                                android:id="@+id/totaltaxablevalue"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:background="@drawable/rightborder"
                                android:layout_weight="1"/>


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text=""

                                android:textAlignment="center"
                                android:background="@drawable/rightborder"
                                android:layout_weight="1"/>



                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="sgstvalue"
                                android:id="@+id/totalsgstvaluetext"
                                android:background="@drawable/rightborder"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_weight="1"/>


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:background="@drawable/rightborder"
                                android:text="" />


                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="cgstvalue"
                                android:textAlignment="center"
                                android:id="@+id/totalcgstvaluetext"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:background="@drawable/rightborder"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="totalamount"
                                android:textAlignment="center"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:id="@+id/totalbillamountview"
                                android:layout_weight="1"/>
                        </LinearLayout>
                </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>








</LinearLayout>