<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewproductName"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:text="ProductName"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="normal|bold|italic" />

            <TextView
                android:id="@+id/textViewCompanyName"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_weight="5"
                android:text="CompanyName"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:textStyle="normal|bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Edit Qty"
                android:layout_weight="3"
                android:layout_marginBottom="5dp"
                android:id="@+id/qty_list_btn"
                android:background="@color/md_grey_400"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Delete"
                android:layout_weight="3"
                android:background="@color/delete_button_red"/>




        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        android:weightSum="20">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Batch no"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/textViewpackaging"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="5"
            android:text="Pack"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="normal|bold|italic" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Expiry"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="normal|bold|italic" />


        <TextView
            android:id="@+id/textViewcMrp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="MRP"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="normal|bold|italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_margin="1dp"

        android:weightSum="20">


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Batchno"

            android:gravity="center"
            android:layout_weight="5"
            android:textSize="14dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:id="@+id/batchno_listitem" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="pack"

            android:gravity="center"
            android:layout_weight="5"
            android:textSize="14dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:id="@+id/packaging_listitem" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="expiry"

            android:gravity="center"
            android:layout_weight="5"
            android:textSize="14dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:id="@+id/expiry_listitem" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="MRP"

            android:gravity="center"
            android:layout_weight="5"
            android:textSize="14dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:id="@+id/mrp_listitem" />




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"

        android:weightSum="20">

        <TextView
            android:id="@+id/textViewquantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="5"
            android:text="Qty"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="normal|bold|italic" />

        <TextView
            android:id="@+id/textViewrate"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_weight="5"
            android:text="Rate"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="normal|bold|italic" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="GST"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:textStyle="normal|bold|italic" />


        <TextView
            android:id="@+id/textviewamount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"

            android:text="Amount"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="normal|bold|italic" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp"
        android:layout_margin="1dp"

        android:weightSum="20">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="quantity"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="5"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#000000"
                android:ellipsize="end"
                android:layout_marginLeft="15dp"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:id="@+id/qty_listitems" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loose quantity"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_weight="5"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:ellipsize="end"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:id="@+id/looseqty_listitems" />


        </LinearLayout>









        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Rate"
            android:gravity="center"
            android:layout_weight="5"
            android:textSize="14dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:id="@+id/rate" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="GST"

            android:gravity="center"
            android:layout_weight="5"
            android:textSize="14dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:id="@+id/gst_list_item" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="amount"

            android:gravity="center"
            android:layout_weight="5"
            android:textSize="14dp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="2"
            android:scrollHorizontally="true"
            android:id="@+id/amount_listitem" />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#b7b7b7"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>